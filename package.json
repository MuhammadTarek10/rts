{
  "name": "rts-monorepo-root",
  "private": true,
  "scripts": {
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.0"
  },
  "lint-staged": {
    "services/**/*.ts": [
      "eslint --fix"
    ],
    "app/**/*.ts": [
      "eslint --fix"
    ],
    "app/**/*.vue": [
      "eslint --fix"
    ],
    "services/**/*.go": [
      "gofumpt -w"
    ],
    "services/catalog/**/*.cs": [
      "dotnet format services/catalog/Catalog.slnx --include"
    ]
  }
}
